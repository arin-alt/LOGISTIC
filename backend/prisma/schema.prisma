generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("mongodb+srv://gupitmarinel27:logistics12345@cluster0.tqyhw.mongodb.net/")
}

model Users {
  id    String @id @map("_id") // use MongoDB's default _id
  name  String
  email String @unique // ensure email is unique
}

model Products {
  id             String @id  @map("_id") // use MongoDB's default _id
  name           String
  price          Float
  rating         Float?
  stockQuantity  Int
  sales          Sales[]
  purchases      Purchases[]
}

model Sales {
  id         String  @id  @map("_id") // use MongoDB's default _id
  productId   String
  timestamp   DateTime
  quantity    Int
  unitPrice   Float
  totalAmount Float
  product     Products @relation(fields: [productId], references: [id]) // reference the product id
}

model Purchases {
  id          String @id  @map("_id") // use MongoDB's default _id
  productId   String
  timestamp   DateTime
  quantity    Int
  unitCost    Float
  totalCost   Float
  product     Products @relation(fields: [productId], references: [id]) // reference the product id
}

model Expenses {
  id        String  @id  @map("_id") // use MongoDB's default _id
  category  String
  amount    Float
  timestamp DateTime
}

model SalesSummary {
  id                String  @id  @map("_id") // use MongoDB's default _id
  totalValue        Float
  changePercentage  Float?
  date              DateTime
}

model PurchaseSummary {
  id                String  @id  @map("_id") // use MongoDB's default _id
  totalPurchased    Float
  changePercentage  Float?
  date              DateTime
}

model ExpenseSummary {
  id                String  @id  @map("_id") // use MongoDB's default _id
  totalExpenses     Float
  date              DateTime
  expenseByCategory ExpenseByCategory[]
}

model ExpenseByCategory {
  id                 String  @id  @map("_id") // use MongoDB's default _id
  expenseSummaryId   String
  category           String
  amount             BigInt
  date               DateTime
  expenseSummary     ExpenseSummary @relation(fields: [expenseSummaryId], references: [id]) // reference the expense summary id
}
