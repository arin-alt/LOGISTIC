{
  "compilerOptions": {
    "target": "ES6",                     // Target modern JavaScript
    "module": "CommonJS",                // Use CommonJS for Node.js
    "rootDir": "./src",                  // Root folder for TypeScript source files
    "outDir": "./dist",                  // Output folder for compiled JavaScript
    "strict": true,                      // Enable strict type checking
    "esModuleInterop": true,             // Import compatibility
    "skipLibCheck": true,                // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],                    // Include all files in the `src` directory
  "exclude": ["node_modules"]            // Exclude dependencies
}
